# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_NAME=vetool
DB_USER=vetool
DB_PASSWORD=change-this-password

# Connection Strings
ConnectionStrings__DefaultConnection=Host=${DB_HOST};Port=${DB_PORT};Database=${DB_NAME};Username=${DB_USER};Password=${DB_PASSWORD}
ConnectionStrings__RedisConnection=redis:6379

# JWT Configuration
JWT__Secret=your-super-secret-jwt-key-change-this-in-production-minimum-32-characters
JWT__Issuer=vetool-api
JWT__Audience=vetool-web
JWT__ExpirationMinutes=60

# Hangfire Configuration
Hangfire__DashboardEnabled=true

# ASP.NET Core Configuration
ASPNETCORE_ENVIRONMENT=Development
ASPNETCORE_URLS=http://+:8080

# Next.js Configuration
NEXT_PUBLIC_API_BASE=http://localhost:5001/api/v1
API_BASE_INTERNAL=http://api:8080/api/v1
NODE_ENV=development

# AWS S3 Configuration (if needed)
AWS__AccessKey=your-access-key
AWS__SecretKey=your-secret-key
AWS__Region=us-east-1
AWS__BucketName=your-bucket-name

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
